{
  "name": "web-application",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "pnpm run start --filter $APP",
    "heroku-postbuild": "npx turbo run build --scope=$APP --includeDependencies --no-deps"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "^1.1.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0 <17"
  },
  "packageManager": "pnpm@6.31.0"
}
