{
  "name": "web-application",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/"
  ],
  "scripts": {
    "preinstall": "rm -rf apps packages && cd services",
    "start": "npm run -w services start",
    "dev": "turbo run dev --parallel"
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "turbo": "^1.4.3"
  },
  "engines": {
    "npm": "8.x",
    "node": "16.x"
  }
}
