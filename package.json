{
  "name": "product",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "node ./apps/$APP",
    "heroku-postbuild": "npx turbo run build --scope=$APP --includeDependencies --no-deps"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "^1.1.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0 <17"
  },
  "packageManager": "pnpm@6.31.0"
}
