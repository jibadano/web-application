{
  "name": "web-application",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "scope": "turbo run dev --scope=web",
    "build-services": "pnpm i -r & npx turbo run build --scope=services",
    "start-services": "npx turbo run start --filter=services",
    "start": "npx turbo run start --filter=services",
    "heroku-postbuild": "npx turbo run build --scope=services"
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "turbo": "^1.4.3"
  },
  "engines": {
    "npm": "8.x",
    "node": "16.x"
  },
  "packageManager": "pnpm@6.33.1"
}
